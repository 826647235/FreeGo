<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="20dp"/>

   <android.support.v7.widget.CardView
       android:id="@+id/seek"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="5dp"
       app:cardCornerRadius="4dp"
       app:cardElevation="0px"
       app:cardBackgroundColor="#60000000">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal">

         <View
             android:id="@+id/leftLine1"
             android:layout_width="0.5dp"
             android:layout_height="30dp"
             android:layout_marginTop="5dp"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="10dp"
             android:background="@color/transparentWhite"/>
         <View
             android:id="@+id/rightLine1"
             android:layout_width="0.5dp"
             android:layout_height="30dp"
             android:layout_marginTop="5dp"
             android:layout_alignParentRight="true"
             android:layout_marginRight="10dp"
             android:background="@color/transparentWhite"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/leftLine1"
             android:layout_toLeftOf="@id/rightLine1"
             android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/transparentWhite"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

               <ImageView
                   android:src="@mipmap/seek"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="60dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="寻觅"
                   android:textSize="20sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="80dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/transparentWhite"/>
         </LinearLayout>
      </RelativeLayout>
   </android.support.v7.widget.CardView>

   <android.support.v7.widget.CardView
       android:id="@+id/photo"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="5dp"
       app:cardCornerRadius="4dp"
       app:cardElevation="0px"
       app:cardBackgroundColor="#60000000">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal">

         <View
             android:id="@+id/leftLine2"
             android:layout_width="0.5dp"
             android:layout_height="30dp"
             android:layout_marginTop="5dp"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="10dp"
             android:background="@color/transparentWhite"/>
         <View
             android:id="@+id/rightLine2"
             android:layout_width="0.5dp"
             android:layout_height="30dp"
             android:layout_marginTop="5dp"
             android:layout_alignParentRight="true"
             android:layout_marginRight="10dp"
             android:background="@color/transparentWhite"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/leftLine2"
             android:layout_toLeftOf="@id/rightLine2"
             android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/transparentWhite"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

               <ImageView
                   android:src="@mipmap/photo"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="60dp"/>

               <TextView
                   android:text="云相册"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="80dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/transparentWhite"/>
         </LinearLayout>
      </RelativeLayout>
   </android.support.v7.widget.CardView>

   <android.support.v7.widget.CardView
       android:id="@+id/near_people"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="5dp"
       app:cardCornerRadius="4dp"
       app:cardElevation="0px"
       app:cardBackgroundColor="#60000000">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal">

         <View
             android:id="@+id/leftLine3"
             android:layout_width="0.5dp"
             android:layout_height="30dp"
             android:layout_marginTop="5dp"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="10dp"
             android:background="@color/transparentWhite"/>
         <View
             android:id="@+id/rightLine3"
             android:layout_width="0.5dp"
             android:layout_height="30dp"
             android:layout_marginTop="5dp"
             android:layout_alignParentRight="true"
             android:layout_marginRight="10dp"
             android:background="@color/transparentWhite"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/leftLine3"
             android:layout_toLeftOf="@id/rightLine3"
             android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/transparentWhite"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

               <ImageView
                   android:src="@mipmap/near_people"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="60dp"/>

               <TextView
                   android:text="附近的人"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="80dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/transparentWhite"/>
         </LinearLayout>
      </RelativeLayout>
   </android.support.v7.widget.CardView>

   <android.support.v7.widget.CardView
       android:id="@+id/compress"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="5dp"
       app:cardCornerRadius="4dp"
       app:cardElevation="0px"
       app:cardBackgroundColor="#60000000">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:orientation="horizontal">

         <View
             android:id="@+id/leftLine4"
             android:layout_width="0.5dp"
             android:layout_height="30dp"
             android:layout_marginTop="5dp"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="10dp"
             android:background="@color/transparentWhite"/>
         <View
             android:id="@+id/rightLine4"
             android:layout_width="0.5dp"
             android:layout_height="30dp"
             android:layout_marginTop="5dp"
             android:layout_alignParentRight="true"
             android:layout_marginRight="10dp"
             android:background="@color/transparentWhite"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/leftLine4"
             android:layout_toLeftOf="@id/rightLine4"
             android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="@color/transparentWhite"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

               <ImageView
                   android:src="@mipmap/compress"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="60dp"/>

               <TextView
                   android:text="照片压缩"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="80dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/transparentWhite"/>
         </LinearLayout>
      </RelativeLayout>
   </android.support.v7.widget.CardView>
</LinearLayout>